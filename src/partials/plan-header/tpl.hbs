<section class="gr-track-title-section bg-secondary px-3 px-sm-0">
    <div class="container py-5">
        <div class="row">
            <div class="col-12 col-lg-10 offset-lg-1">
                <div class="gr-breadcrumbs d-flex align-items-center text-muted position-relative">
                    <a class="btn btn-link p-0 text-muted fs-3" href="{{url}}">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    <span>Plano de estudos</span>
                    <span class="px-1">/</span>
                    <span>{{category}}</span>
                </div>

                <h1 class="mb-3">{{title}}</h1>

                {{#if (isTruthy description)}}
                    <p class="m-0">{{description}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>