{{#extend "default"}}
    {{#content "main"}}
        <div class="gr-study-plan gr-theme-backend">
            <section class="bg-secondary px-3 px-sm-0">
                <div class="gr-track-title-section bg-secondary">
                    <div class="container py-5">
                        <div class="col-12 col-lg-10 offset-lg-1">
                            <span class="d-block">
                                <span>Plano de estudos</span>
                                <span class="px-1">/</span>
                                <span>Frontend</span>
                            </span>
                            <h1>
                                {{get "title" (itemAt planoEstudo.items query.id)}}
                            </h1>
                        </div>
                    </div>
                </div>
            </section>
            <section class="py-5 px-3 px-sm-0">
                <div class="container">
                    <div class="row">
                        <div class="col-3 offset-1 d-none d-lg-block">
                            {{#each planoEstudo.items}}
                                {{#embed "study-plan-step/tpl" context=this}}{{/embed}}
                            {{/each}}
                        </div>
                        <div class="col-12 cl-md-10 ofsset-md-1 col-lg-7 offset-lg-0">
                            {{#each planoEstudo.items}}
                                {{#embed "plan-topic-entry/tpl" context=this}}{{/embed}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {{/content}}
{{/extend}}