{{#extend "default"}}
    {{#content "main"}}
        <div class="auth-container flex-fill mx-3">
            {{#embed "form-box/tpl"}}
                {{#content "cardTitle"}}
                    Bem vindo de volta!
                {{/content}}

                {{#content "cardContent"}}
                    <div class="mb-3">
                        <label for="inputEmail3" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail3" />
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword3" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword3" />
                    </div>

                    <div class="text-end my-4">
                        <a href="/recuperar" class="text-body-link">Escqueceu sua senha?</a>
                    </div>
                {{/content}}

                {{#content "cardButton"}} Login {{/content}}

                {{#content "cardExtra"}}
                    <div class="d-flex align-items-center my-3">
                        <div class="border-top border-lighter flex-fill" style="height: 1px"></div>
                        <div class="px-2">ou</div>
                        <div class="border-top border-lighter flex-fill" style="height: 1px"></div>
                    </div>

                    <button type="button" class="btn btn-dark btn-left-icon">
                        <i class="bi bi-github"></i>
                        Continue com o Github
                    </button>

                    <div class="d-flex align-items-center justify-content-center px-4 pt-4">
                        NÃ£o possui uma conta?&nbsp;
                        <a href="{{menu.cadastro.url}}" class="text-decoration-none">
                            {{menu.cadastro.title}}
                        </a>
                    </div>
                {{/content}}
            {{/embed}}
        </div>
    {{/content}}
{{/extend}}
