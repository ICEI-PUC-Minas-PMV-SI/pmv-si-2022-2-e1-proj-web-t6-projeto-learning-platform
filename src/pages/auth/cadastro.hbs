{{#extend "default"}}
    {{#content "main"}}
        <div class="auth-container flex-fill mx-3">
            {{#embed "form-box/tpl"}}
                {{#content "cardTitle"}}
                    {{auth.signUp.title}}
                {{/content}}

                {{#content "cardContent"}}
                    <div class="mb-3">
                        <label
                            for="inputNome3"
                            class="form-label"
                        >{{auth.signUp.form.name.label}}</label>
                        <input
                            class="form-control"
                            placeholder="{{auth.signUp.form.name.placahoder}}"
                            id="inputNome3"
                        />
                    </div>

                    <div class="mb-3">
                        <label
                            for="inputEmail3"
                            class="form-label"
                        >{{auth.signUp.form.email.label}}</label>
                        <input
                            type="email"
                            class="form-control"
                            placeholder="{{auth.signUp.form.email.placahoder}}"
                            id="inputEmail3"
                        />
                    </div>

                    <div class="mb-3">
                        <label
                            for="inputPassword3"
                            class="form-label"
                        >{{auth.signUp.form.password.label}}</label>
                        <input
                            type="password"
                            class="form-control"
                            placeholder="{{auth.signUp.form.password.placahoder}}"
                            id="inputPassword3"
                        />
                    </div>
                {{/content}}

                {{#content "cardButton"}}
                    Criar conta
                {{/content}}

                {{#content "cardExtra"}}
                    <div class="d-flex align-items-center my-3">
                        <div class="border-top border-lighter flex-fill" style="height: 1px;"></div>
                        <div class="px-2">ou</div>
                        <div class="border-top border-lighter flex-fill" style="height: 1px;"></div>
                    </div>

                    <button type="button" class="btn btn-dark btn-left-icon">
                        <i class="bi bi-github"></i>
                        {{auth.link.github.label}}
                    </button>

                    <div class="d-flex align-items-center justify-content-center px-4 pt-4">
                        {{auth.signUp.hasAccount}}&nbsp;
                        <a
                            href="{{menu.login.url}}"
                            class="text-decoration-none"
                        >{{auth.link.login.label}}</a>
                    </div>
                {{/content}}
            {{/embed}}
        </div>
    {{/content}}
{{/extend}}