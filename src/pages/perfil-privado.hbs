{{#extend "default"}}
    {{#content "main"}}
        <section class="d-flex gr-profile-header w-100">
            <div class="container gr-profile-container">
                <h1 class="py-4">Olá, que bom te ver de volta!</h1>
                <div class="row">
                    <div class="col-md-3">
                        <img class="mask-img" src="../public/images/User.png" />
                    </div>
                    <div class="col-md-9">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2>Marcelo Soares</h2>
                            <a href="" class="text-decoration-none" style="font-size: 18px">Editar perfil</a>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-envelope p-1"></i>
                            <p>marcelo.soares@gmail.com</p>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-geo-alt p-1"></i>
                            <p>Belo Horizonte, Minas Gerais</p>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-github p-1"></i>
                            <p>marcelosoares</p>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-linkedin p-1"></i>
                            <p>http://linkedin.com/marcelo-soares</p>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-link-45deg p-1"></i>
                            <p>http://marcelo.soares.com.br</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="gr-menu w-100">
            <div class="container gr-profile-container">
                <div class="d-flex-row menu">
                    <button id="target1" href="#target1" class="btn btn-nav-section target">Planos
                        em andamento</button>
                    <button id="target2" href="#target2" class="btn btn-nav-section target">Planos
                        concluídos</button>
                    <button id="target3" href="#target3" class="btn btn-nav-section target">Conteúdo
                        salvo</button>
                    <button
                        id="target4"
                        href="#target4"
                        class="btn btn-nav-section target"
                    >Notas</button>
                    <a href="" class="text-decoration-none">Criar novo plano de estudos</a>
                </div>
                
            </div>
        </section>
        <section class="w-100">
            <div class="container gr-profile-container gr-search">
                <div class="d-flex justify-content-between align-items-center">
                    <input
                        type="text"
                        class="gr-form-filter w-100"
                        placeholder="Filtrar resultados"
                        aria-describedby="button-addon1"
                    />
                    <div class="dropdown dropup mx-2">
                        <button
                            class="dropdown-toggle gr-form-filter text-start"
                            id="dropdownMenuOffset"
                            style="width: 328px;"
                            type="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            <span class="d-none d-sm-inline">Ordenar por</span>
                            <i class="bi bi-chevron-down"></i>
                        </button>
                        <div class="dropdown-menu w-100">
                            <li><a
                                    class="d-flex dropdown-item justify-content-between"
                                    href="#/"
                                >Ordenar por <i class="bi bi-chevron-right"></i></a></li>
                            <li><a class="dropdown-item" href="#/">Mais antigos primeiro</a></li>
                            <li><a class="dropdown-item" href="#/">Mais novos primeiro</a></li>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{#embed "profile-body/tpl"}}{{/embed}}

    {{/content}}
{{/extend}}