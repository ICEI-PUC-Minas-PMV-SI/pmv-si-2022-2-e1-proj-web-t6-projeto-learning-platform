{{#extend "default" scroll="main" body-bg="black"}}
    {{#content "main"}}
        <div class="gr-sign-in-page d-flex flex-fill">
            <div class="container d-flex align-items-center flex-fill">
                <div
                    class="gr-sign-in-images-container flex-fill d-none d-lg-flex flex-column align-items-center justify-content-center order-0 text-center"
                >
                    <h1 class="text-gradient fs-xxl">Grimore</h1>
                    <p class="lead-text mb-4">Aprenda no seu tempo as technologias mais quentes do
                        mercado!</p>
                    <div class="gr-sign-in-images d-flex justify-content-center align-items-center">
                        {{#each (i "auth.signIn.images")}}
                            <div
                                class="item
                                    {{this}}
                                    d-flex justify-content-center align-items-center"
                                data-active="{{this}}"
                            >
                                <div class="gradient {{this}}"></div>
                                {{#startsWith "emoji_" this}}
                                    <img
                                        alt="{{this}}"
                                        class="target"
                                        src="/public/images/emojis/{{replace this 'emoji_' ''}}.png"
                                    />
                                {{else}}
                                    <img
                                        alt="{{this}}"
                                        class="target"
                                        src="/public/images/tech/{{this}}-250.png"
                                    />
                                {{/startsWith}}
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="flex-fill d-flex justify-content-center order-1">
                    <div class="auth-container mx-md-3">
                        {{#embed
                            "form-box/tpl"
                            id="gr-login"
                            action=(append auth.signIn "/jsonDb")
                        }}
                            {{#content "cardTitle"}}
                                {{i "auth.signIn.title"}}
                            {{/content}}

                            {{#content "cardSubTitle"}}
                                <p class="text-center mb-4">{{i "auth.signIn.subTitle"}}</p>
                            {{/content}}

                            {{#content "cardContent"}}
                                <div class="mb-3">
                                    <label for="auth-username" class="form-label">
                                        {{i "auth.signIn.email.label"}}
                                    </label>
                                    <input
                                        name="username"
                                        type="text"
                                        class="form-control"
                                        id="auth-username"
                                        minlength="3"
                                        maxlength="60"
                                        required
                                    />
                                </div>

                                <div class="mb-3">
                                    <label for="auth-password" class="form-label">
                                        {{i "auth.signIn.password.label"}}
                                    </label>
                                    <input
                                        name="password"
                                        type="password"
                                        class="form-control"
                                        id="auth-password"
                                        minlength="8"
                                        maxlength="30"
                                        required
                                    />
                                </div>

                                <div class="text-end my-4">
                                    <a href="{{i 'main.recover.url'}}" class="text-decoration-none">
                                        {{i "main.recover.label"}}</a>
                                </div>
                            {{/content}}
                            {{log this}}
                            {{#content "cardButton"}} {{i "auth.signIn.login"}}&nbsp;{{/content}}

                            {{#content "cardExtra"}}
                                <div class="d-flex align-items-center my-3">
                                    <div
                                        class="border-top border-lighter flex-fill"
                                        style="height: 1px"
                                    ></div>
                                    <div class="px-2">ou</div>
                                    <div
                                        class="border-top border-lighter flex-fill"
                                        style="height: 1px"
                                    ></div>
                                </div>

                                {{#embed "github-sign-in/tpl"}}{{/embed}}

                                <p class="px-4 pt-4 text-center">
                                    {{i "auth.signIn.noAccount"}}&nbsp;
                                    <a href="{{i 'main.signUp.url'}}" class="text-decoration-none">
                                        {{i "main.signUp.label"}}
                                    </a>
                                </p>
                            {{/content}}
                        {{/embed}}
                    </div>
                </div>
            </div>
        </div>
    {{/content}}
    {{#content "scripts" mode="append"}}
        <script src="/public/scripts/pages/sign-in.js"></script>
        <script src="/public/scripts/pages/sign-up.js"></script>
    {{/content}}
{{/extend}}