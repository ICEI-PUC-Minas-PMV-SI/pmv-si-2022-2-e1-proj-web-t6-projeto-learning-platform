{{#extend "default"}}
    {{#content "main"}}
        <div class="gr-search-page d-flex flex-column overflow-hidden">
            {{#if (isTruthy area)}}
                {{#with area}}
                    <div class="gr-search-area py-4 px-3 bg-{{slug}} text-white">
                        <div class="d-flex align-items-center">
                            <h4 class="me-3">{{title}}</h4>
                            <button class="btn btn-link btn-lg text-white p-0">
                                <i class="bi bi-flag-fill"></i>
                            </button>
                            <div class="vr mx-4"></div>
                            <a href="/search" title="" class="text-dark">
                                <small>Remover filtro e buscar em todas as categorias</small>
                            </a>
                            <div class="flex-fill text-end">
                                <button
                                    data-toggle="gr-search-area-description"
                                    class="btn btn-link text-white"
                                >
                                    <i class="bi bi-chevron-up"></i>
                                </button>
                            </div>
                        </div>
                        <div id="gr-search-area-description" class="pt-4">
                            <p>{{description}}</p>
                        </div>
                    </div>
                {{/with}}
            {{/if}}
            <div id="gr-search-menu" class="gr-search-menu bg-black pt-2 pb-3 px-3 overflow-hidden">
                <div class="d-flex h-100">
                    {{#each technologies}}
                        <a
                            id="{{id}}"
                            href="/search?area={{area.slug}}&tech={{slug}}"
                            data-slug="{{slug}}"
                            data-index="{{@index}}"
                            class="d-inline-block border border-2 rounded-3 bg-dark bg-lighter-hover text-white-hover text-decoration-none me-2 px-3 py-2"
                        >
                            <img src="{{icon}}" alt="{{title}}" class="d-block mb-2" width="37" height="37" />
                            <small class="d-block">{{title}}</small>
                        </a>
                    {{/each}}
                </div>
            </div>
            <div class="gr-search-main d-flex flex-fill overflow-hidden border-top border-dark">
                <div id="gr-search-sidebar" class="gr-search-sidebar bg-black">
                    <nav class="px-3 py-4 border-end border-dark h-100">
                        <div class="mb-5">
                            <p class="text-bold text-{{default area.slug "muted"}} fw-bolder">Minha lista</p>
                            <ul class="nav flex-column">
                                {{#each (i "search.userMenu")}}
                                    <li class="nav-item">
                                        <a class="nav-link ps-0 text-body text-{{default (data "area.slug") "primary"}}-hover"
                                           href="{{url}}{{#isTruthy (data "area")}}&area={{data "area.slug"}}{{/isTruthy}}"
                                           title="{{title}}">
                                            <i class="bi bi-dash opacity-25 d-inline pe-1"></i>
                                            {{title}}
                                        </a>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                        {{#gt (length playlists) 0}}
                        <div>
                            <p class="text-bold text-{{default area.slug "muted"}} fw-bolder">Playlists</p>
                            <ul class="nav flex-column">
                            {{#each playlists}}
                                <li class="nav-item">
                                    <a
                                        class="nav-link d-flex justify-content-start align-items-center ps-0 text-body text-{{default (data "area.slug") "primary"}}-hover"
                                        href="/search?playlist={{id}}"
                                        title="{{title}}"
                                    >
                                        <i class="bi bi-dash opacity-25 d-inline pe-1"></i>
                                        <span>{{title}}</span>
                                    </a>
                                </li>
                            {{/each}}
                            </ul>
                        </div>
                        {{/gt}}
                    </nav>
                </div>
                <div id="gr-search-results" class="flex-fill overflow-auto">
                    <div class="p-4 d-flex flex-wrap">
                        {{#each videos}}
                            <a
                                class="gr-search-result d-inline-block me-4 mb-4"
                                href="/video?id={{id}}"
                                title={{title}}
                            >
                                <span class="d-block mb-2">
                                    <img
                                        src="{{thumbnail}}"
                                        alt="{{title}}"
                                        class="img-fluid rounded-3"
                                    />
                                </span>
                                <span class="d-block">
                                    <p class="mb-0"><strong><small>{{title}}</small></strong></p>
                                </span>
                            </a>
                        {{/each}}
                        {{#eq query.type "playlists"}}
                            {{#each playlists}}
                                <a
                                    class="gr-search-result d-inline-block me-4 mb-4"
                                    href="/video?id={{id}}"
                                    title={{title}}
                                >
                                <span class="d-block mb-2 position-relative overflow-hidden">
                                    {{#each (first videos 3)}}
                                        <img
                                            src="{{thumbnail}}"
                                            alt="{{title}}"
                                            class="img-fluid rounded-3 {{#gt @index 0}}position-absolute top-0 left-{{multiply @index 25}}{{/gt}}"
                                        />
                                    {{/each}}
                                </span>
                                <span class="d-block">
                                    <p class="mb-0">
                                        <strong><small>{{title}}</small></strong>
                                    </p>
                                    <p class="mb-0 text-muted">
                                       {{area.title}} - {{length videos}} videos
                                    </p>
                                </span>
                                </a>
                            {{/each}}
                        {{/eq}}
                    </div>
                </div>
            </div>
        </div>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/public/scripts/pages/search.js"></script>
    {{/content}}
{{/extend}}
