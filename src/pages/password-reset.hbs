{{#extend "default"}}
    {{#content "main"}}
        <div class="auth-container flex-fill mx-3">
            {{#embed "form-box/tpl"}}
                {{#content "cardTitle"}}
                    {{auth.new-password.title}}
                {{/content}}

                {{#content "cardContent"}}
                    <div class="mb-3">
                        <label
                            for="inputPassword"
                            class="form-label"
                        >{{auth.new-password.form.password.label}}</label>
                        <input
                            type="email"
                            class="form-control"
                            id="inputEmail3"
                            placeholder="{{auth.new-password.form.password.placeholder}}"
                        />
                    </div>

                    <div class="mb-3">
                        <label
                            for="inputNewPassword"
                            class="form-label"
                        >{{auth.new-password.form.confirm-password.label}}</label>
                        <input
                            type="password"
                            class="form-control"
                            id="inputPassword3"
                            placeholder="{{auth.new-password.form.confirm-password.placeholder}}"
                        />
                    </div>

                {{/content}}

                {{#content "cardButton"}} {{auth.new-password.form.redefine.label}} {{/content}}

                {{#content "cardExtra"}}

                    <div class="d-flex align-items-center justify-content-center px-4 pt-4">
                        {{auth.new-password.backToLogin}}&nbsp;
                        <a href="{{menu.cadastro.url}}" class="text-decoration-none">
                            {{auth.new-password.login}}
                        </a>
                    </div>

                {{/content}}
            {{/embed}}
        </div>
    {{/content}}
{{/extend}}