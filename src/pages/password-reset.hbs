{{#extend "default"}}
    {{#content "main"}}
        <div class="auth-container flex-fill mx-3">
            {{#embed "form-box/tpl"}}
                {{#content "cardTitle"}}
                    {{i "auth.newPassword.title"}}
                {{/content}}

                {{#content "cardContent"}}
                    <div class="mb-3">
                        <label
                            for="password"
                            class="form-label"
                        >{{i "auth.newPassword.password.label"}}</label>
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            placeholder="{{i "auth.newPassword.password.placeholder"}}"
                        />
                    </div>

                    <div class="mb-3">
                        <label
                            for="passwordConfirm"
                            class="form-label"
                        >{{i "auth.newPassword.confirmPassword.label"}}</label>
                        <input
                            type="password"
                            class="form-control"
                            id="passwordConfirm"
                            placeholder="{{i "auth.newPassword.confirmPassword.placeholder"}}"
                        />
                    </div>
                {{/content}}

                {{#content "cardButton"}} {{i "auth.newPassword.redefine.label"}} {{/content}}

                {{#content "cardExtra"}}
                    <div class="d-flex align-items-center justify-content-center px-4 pt-4">
                        {{i "auth.newPassword.backToLogin"}}&nbsp;
                        <a href="{{i "main.signUp.url"}}" class="text-decoration-none">
                            {{i "auth.newPassword.login"}}
                        </a>
                    </div>
                {{/content}}
            {{/embed}}
        </div>
    {{/content}}
{{/extend}}
